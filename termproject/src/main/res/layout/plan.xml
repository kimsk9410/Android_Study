<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/unitll">

        <TextView
            android:text="일 단위"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewdate"
            android:textSize="15dp"
            android:background="@drawable/roundborder_55555555_fill"
            android:layout_marginRight="10dp"
            android:padding="10dp"/>

        <TextView
            android:text="주 단위"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewweek"
            android:textSize="15dp"
            android:background="@drawable/roundborder_55555555"
            android:padding="10dp"/>

        <TextView
            android:text="월 단위"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewmonth"
            android:textSize="15dp"
            android:background="@drawable/roundborder_55555555"
            android:layout_marginLeft="10dp"
            android:padding="10dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/roundborder_55555555"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/unitll"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:stretchColumns="*"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/plantl">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/roundborder_55555555">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:text="기간"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                    <TextView
                        android:text="목표계획 및 달성상황"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>
</RelativeLayout>